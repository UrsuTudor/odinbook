<%= turbo_frame_tag 'users' do %>
  Logged in as: <%= current_user.name %>
  <% users.each do |user| %>
    <%= form_with(url: follow_requests_path, method: :post) do |f| %>
      <%= f.hidden_field :sender_id, value: current_user.id %>
      <%= f.hidden_field :recipient_id, value: user.id %>
      <%= user.name %>
      <% unless follow_requests.include?(user.id) %>
          <%= f.submit 'Send Follow Request', data: { controller: "follow-request", action: "click->follow-request#disable_button", "follow-request-target": "button" } %>
      <% end %>
      <br>
    <% end %>
  <% end %>
<% end %>

